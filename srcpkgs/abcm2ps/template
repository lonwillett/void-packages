# Template file for 'abcm2ps'
pkgname=abcm2ps
version=8.13.23
revision=1
build_style=configure
hostmakedepends="pkg-config"
makedepends="pango-devel"
short_desc="ABC music notation software"
maintainer="lemmi <lemmi@nerd2nerd.org>"
license="GPL-2.0-or-later"
