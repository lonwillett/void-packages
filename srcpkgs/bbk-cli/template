# Template file for 'bbk-cli'
pkgname=bbk-cli
version=1.1
revision=2
_gitrev=3180567c5830c82c991a8059692d8fc3725df7cd
wrksrc=bbkcli-${version}
build_style=gnu-makefile
make_build_target="cli"
make_build_args="GNUTLS=1 -C src/cli"
makedepends="gnutls-devel"
short_desc="Bredbandskollen's command line tool"
maintainer="Lon Willett <xgit@lonw.net>"
license="GPL-2.0-or-later"
homepage="http://www.bredbandskollen.se/om/mer-om-bbk/bredbandskollen-cli/"
distfiles="https://github.com/dotse/bbk/archive/${_gitrev}.tar.gz>bbk-${version}.tar.gz"
checksum=0158403c6c822e6843aa25543ac977934e34398ddfbc6509dcc12747937d97ee

post_extract() {
	mv ${XBPS_BUILDDIR}/bbk-${_gitrev} ${XBPS_BUILDDIR}/bbkcli-${version}
}

do_install() {
	     vbin src/cli/cli bbk_cli
}
