# Template file for 'bbk-gtk'
pkgname=bbk-gtk
version=1.1
revision=2
_gitrev=3180567c5830c82c991a8059692d8fc3725df7cd
wrksrc=bbkgtk-${version}
build_style=gnu-makefile
make_build_target="bredbandskollen"
make_build_args="GNUTLS=1 -C src/gtkgui "
makedepends="gtk+3-devel gnutls-devel glib-devel"
hostmakedepends="pkg-config"
short_desc="Bredbandskollen's GTK+ frontend"
maintainer="Lon Willett <xgit@lonw.net>"
license="GPL-2.0-or-later"
homepage="http://www.bredbandskollen.se/om/mer-om-bbk/bredbandskollen-cli/"
distfiles="https://github.com/dotse/bbk/archive/${_gitrev}.tar.gz>bbk-${version}.tar.gz"
checksum=0158403c6c822e6843aa25543ac977934e34398ddfbc6509dcc12747937d97ee

post_extract() {
	mv ${XBPS_BUILDDIR}/bbk-${_gitrev} ${XBPS_BUILDDIR}/bbkgtk-${version}
}

do_install() {
	     vbin src/gtkgui/bredbandskollen
}
