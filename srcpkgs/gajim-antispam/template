# Template file for 'gajim-antispam'
pkgname=gajim-antispam
version=1.4.4
revision=1
noarch=yes
wrksrc="anti_spam"
build_style="fetch"
# xxx Need python3 in hostmakedepends to use py3_ver
pycompile_version=$py3_ver
pycompile_dirs="usr/share/gajim/plugins/anti_spam"
hostmakedepends="unzip python3"
depends="gajim"
short_desc="Anti-spam plugin for Gajim"
maintainer="Lon Willett <xgit@lonw.net>"
license="GPL-3"
homepage="https://dev.gajim.org/gajim/gajim-plugins/wikis/AntiSpamPlugin"
distfiles="https://ftp.gajim.org/plugins_1/anti_spam.zip"
checksum=58085cad9b92717a036bc0c47196368e121e69dd9837a677e1fafef696f5c348

do_extract() {
	unzip -o -q ${XBPS_SRCDISTDIR}/${pkgname}-${version}/anti_spam.zip -d ..
}

do_install() {
	vmkdir usr/share/gajim/plugins/anti_spam
	vcopy * usr/share/gajim/plugins/anti_spam
}
