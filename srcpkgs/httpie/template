# Template file for 'httpie'
pkgname=httpie
version=0.9.9
revision=2
noarch=yes
build_style=python3-module
pycompile_module="httpie"
hostmakedepends="python3-setuptools"
depends="python3-setuptools python3-requests python3-Pygments"
short_desc="Human-friendly command line HTTP client"
maintainer="Alessio Sergi <al3hex@gmail.com>"
homepage="https://httpie.org/"
license="BSD-3-Clause"
distfiles="https://github.com/jakubroztocil/httpie/archive/${version}.tar.gz>${pkgname}-${version}.tar.gz"
checksum=1c714ac87256d0cc34e2aaa1da653eab085a3a82ac5c48dd6fc6f508fba9e54e


post_install() {
	vlicense LICENSE
	vinstall ${wrksrc}/extras/httpie-completion.bash 644 usr/share/bash-completion/completions httpie
}

python3-httpie_package() {
	noarch=yes
	build_style=meta
	short_desc+=" (transitional dummy package)"
	depends="httpie>=${version}_${revision}"
}
