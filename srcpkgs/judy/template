# Template file for 'judy'
pkgname=judy
version=1.0.5
revision=1
build_style=gnu-configure
nocross="Makefiles need to be modified to handle the program-writing programs when cross-compiling."
patch_args="-Np1"
disable_parallel_build="yes"
hostmakedepends="libtool"
short_desc="C library for creating and accessing dynamic arrays"
maintainer="Lon Willett <xgit@lonw.net>"
license="LGPL-2.1"
homepage="http://judy.sourceforge.net/"
distfiles="${SOURCEFORGE_SITE}/judy/Judy-${version}.tar.gz"
checksum=d2704089f85fdb6f2cd7e77be21170ced4b4375c03ef1ad4cf1075bd414a63eb
case "$XBPS_TARGET_MACHINE" in
	x86_64*|aarch64*)
		configure_args+=" --enable-64-bit"
		;;
	i686*|arm*)
		configure_args+=" --enable-32-bit"
		;;
esac

judy-devel_package() {
	short_desc+=" - development files"
	depends="judy"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
		vmove usr/lib/*.so
		vmove usr/share
	}
}
