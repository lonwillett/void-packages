# Template file for 'rssguard'
pkgname=rssguard
version=3.5.0
revision=1
build_style=qmake
configure_args="CONFIG+=release LRELEASE_EXECUTABLE=lrelease-qt5"
makedepends="qt5-tools-devel"
depends="desktop-file-utils"
maintainer="cr6git <quark6@protonmail.com>"
