# Template file for 'vivaldi'
pkgname=vivaldi
version=1.12.955.48
revision=1
_release=1
only_for_archs="i686 x86_64"
depends="desktop-file-utils hicolor-icon-theme"
short_desc="Advanced browser made with the power user in mind"
maintainer="Diogo Leal <diogo@diogoleal.com>"
license="Proprietary"
homepage="https://vivaldi.com"
repository="nonfree"
restricted=yes
nostrip=yes

if [ "$XBPS_TARGET_MACHINE" = "x86_64" ]; then
	_debarch=amd64
	checksum=8ecd1d367e7db2ebd6f9654082527bf03a9a63f05b5a784146d2f21d5ecbd07d
else
	_debarch=i386
	checksum=90d7d127eef6d03f43fc959bd0e2568317e5156e534ed31f92beeb785f352c9f
fi

distfiles="https://downloads.vivaldi.com/stable/vivaldi-stable_${version}-${_release}_${_debarch}.deb"

do_extract() {
	ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/vivaldi-stable_${version}-${_release}_${_debarch}.deb
	tar xf data.tar.xz --exclude={./etc,./opt/vivaldi/cron,./usr/share/{doc,gnome-control-center,menu}}
}

do_install() {
	vinstall usr/share/applications/vivaldi-stable.desktop 0644 \
		/usr/share/applications

	vcopy opt/ /opt
	vcopy usr /

	for res in 16 22 24 32 48 64 128 256; do
		vinstall opt/vivaldi/product_logo_${res}.png 0644 \
		/usr/share/icons/hicolor/${res}x${res}/apps vivaldi.png
	done
}
